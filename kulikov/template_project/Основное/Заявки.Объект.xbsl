
@Обработчик
метод ПередЗаписью(До: Заявки.Данные, ПараметрыЗаписи: Заявки.ПараметрыЗаписи)
    если этот.УИДОбсуждения == Ууид{}
        этот.УИДОбсуждения = РаботаСВ.СоздатьОбсуждение(
            [
                СистемаВзаимодействия.ПолучитьИдПользователяВзаимодействия(Пользователи.ТекущийПользователь)
            ], 
                этот.Тема
            )
    ;
;